<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="./css/admin-app.css" />
    <script defer type="module" src="./js/admin-app.js"></script>
    </head>

    <body>
        <main>
            <section id="players">
                <select name="dynasties" id="dynasty-select">
                    <option value="all">All</option>
                    <% dynasties.forEach((dynasty)=> { %>
                        <option value="<%= dynasty.value %>">
                            <%= dynasty.name %>
                        </option>
                        <% }) %>
                </select>
                <ul id="players-list">
                    <% players.forEach((player)=> { %>
                        <li id="<%= player.name %>" class="players__player" data-dynasty="<%= player.dynasty %>">
                            <%= player.name %>
                        </li>
                        <% }) %>
                </ul>
            </section>
            <hr>
            <section id="player-games" class="hidden">
                <select name="game-status" id="game-status-select">
                    <option value="all">All</option>
                    <option value="started">Started</option>
                    <option value="cancelled">Cancelled</option>
                    <option value="finished">Finished</option>
                    <option value="submitted">Submitted</option>
                </select>
                <ul id="player-games-list">
                </ul>
            </section>
            <hr>
            <section id="games">
                <input type="date" name="game-date-start" id="game-date-start">
                <input type="date" name="game-date-end" id="game-date-end">
                <ul id="games-list">
                </ul>
            </section>
        </main>
    </body>

    </html>