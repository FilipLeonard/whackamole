<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="./font/flaticon.css">
    <link rel="stylesheet" href="./css/app.css" />
    <script defer type="module" src="./js/app.js"></script>
    </head>

    <body>
        <div class="backdrop hidden"></div>
        <div class="modal modal--cancel hidden">
            <h3 class="modal__title">Cancel and go back?</h3>
            <div class="modal__actions">
                <button class="btn-main modal__action modal__action--cancel">Yes</button>
                <button class="btn-main modal__action modal__action--resume" type="button">No</button>
            </div>
        </div>
        <div class="modal modal--results hidden">
            <div class="results__game">
                <div class="result__game">
                    <h4>Whacks</h4><span id="result__whacks">0</span>
                </div>
                <div class="result__game">
                    <h4>Points</h4><span id="result__points">0</span>
                </div>
            </div>
            <div class="modal__actions">
                <button class="btn-main modal__action modal__action--submit">Submit score</button>
                <button class="btn-main modal__action modal__action--new-game" type="button">New game</button>
            </div>
        </div>
        <%- include('includes/header.ejs') %>
            <main>
                <header class="header-main hidden">
                    <div class="header-main__content">
                        <i id="btn__back" class="flaticon-back gradient-text"></i>
                    </div>
                </header>
                <section class="join">
                    <div class="section__content">
                        <span class="input-container">
                            <input class="name-input" type="text" name="name" placeholder="Your warrior name"
                                value="Napoleon" />
                            <span></span>
                        </span>
                        <div class="join-options">
                            <div class="join-options__cat join-modes">
                                <a data-mode="survival"
                                    class="btn-main btn-main__inactive join-option join-mode">Survival</a>
                                <a data-mode="battle" class="btn-main btn-main__active join-option join-mode">Battle</a>
                            </div>
                            <div class="join-options__cat join-diffs">
                                <a data-difficulty="easy"
                                    class="btn-main btn-main__active join-option join-diff">Easy</a>
                                <a data-difficulty="hard"
                                    class="btn-main  btn-main__inactive join-option join-diff">Hard</a>
                            </div>
                        </div>
                        <div class="intent-buttons">
                            <i id="btn-start-game" class="flaticon-play-button btn-start-game gradient-text"></i>
                            <i id="btn-leaderboard" class="flaticon-podium btn-leaderboard gradient-text"></i>
                        </div>
                    </div>
                </section>
                <section class="game hidden">
                    <div class="section__content">
                        <div class="game__scoreboard card">
                            <div class="scoreboard__group  whacks">
                                <i class="flaticon-whack-a-mole  gradient-text"></i>
                                <span id="current-whacks" class="value gradient-text">0</span>
                            </div>
                            <div class="scoreboard__group  multiplier">
                                <i class="flaticon-cancel gradient-text"></i>
                                <span id="current-multiplier" class="value gradient-text">1</span>
                            </div>
                            <div class="scoreboard__group  resources ">
                                <div id="resource-battle" class="hidden">
                                    <i class="flaticon-chronometer gradient-text"></i>
                                    <span class="value gradient-text" id="remaining-time">60</span>
                                </div>
                                <div id="resource-survival" class="not">
                                    <i class="flaticon-lives gradient-text"></i>
                                    <span class="value gradient-text" id="remaining-lives">3</span>
                                </div>
                            </div>
                            <div id="consecutive-tiles" class="scoreboard__group tiles">
                                <div id="tile1" class="tile card-tiny"></div>
                                <div id="tile2" class="tile card-tiny"></div>
                                <div id="tile3" class="tile card-tiny"></div>
                                <div id="tile4" class="tile card-tiny"></div>
                                <div id="tile5" class="tile card-tiny"></div>
                            </div>
                        </div>
                        <div class="game__grid gradient-text">
                            <div id="sq1" class="game__square card"></div>
                            <div id="sq2" class="game__square card"></div>
                            <div id="sq3" class="game__square card"></div>
                            <div id="sq4" class="game__square card"></div>
                            <div id="sq5" class="game__square card"></div>
                            <div id="sq6" class="game__square card"></div>
                            <div id="sq7" class="game__square card"></div>
                            <div id="sq8" class="game__square card"></div>
                            <div id="sq9" class="game__square card"></div>
                        </div>
                    </div>
                </section>
                <section class="results hidden">
                    <div class="section__content">
                        <ul class="results__players">
                        </ul>
                    </div>
                </section>

            </main>
            <%- include('includes/end.ejs') %>